!!! Strict
%html
  %head
    - header_and_title
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %title= @title
    = stylesheet_link_tag "reset", "application", "colours", "statuses", "setup"
  %body
    #header
      %h1
        = @header
    #content
      - flash.each do |key, value|
        .flash{ :id => key }
          = value
      = yield
    #footer
      checked with
      = link_to "construct", "http://github.com/radar/construct"